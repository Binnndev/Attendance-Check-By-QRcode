<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#D32F2F"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo lớp học"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐỊNH DANH LỚP HỌC"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên lớp học *"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/etClassName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="VD: Lập trình Android"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mã môn *"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="12sp"/>
                            <EditText
                                android:id="@+id/etSubjectCode"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_input_field"
                                android:hint="INT1348"
                                android:paddingHorizontal="12dp"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mã lớp *"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="12sp"/>
                            <EditText
                                android:id="@+id/etClassCode"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_input_field"
                                android:hint="D22..."
                                android:paddingHorizontal="12dp"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THỜI GIAN &amp; ĐỊA ĐIỂM"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lịch học hàng tuần"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="7">

                        <TextView
                            android:id="@+id/tvDay2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/bg_day_selector"
                            android:gravity="center"
                            android:text="T2"
                            android:textSize="12sp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView android:id="@+id/tvDay3" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@drawable/bg_day_selector" android:gravity="center" android:text="T3" android:textSize="12sp" android:clickable="true"/>
                        <TextView android:id="@+id/tvDay4" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@drawable/bg_day_selector" android:gravity="center" android:text="T4" android:textSize="12sp" android:clickable="true"/>
                        <TextView android:id="@+id/tvDay5" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@drawable/bg_day_selector" android:gravity="center" android:text="T5" android:textSize="12sp" android:clickable="true"/>
                        <TextView android:id="@+id/tvDay6" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@drawable/bg_day_selector" android:gravity="center" android:text="T6" android:textSize="12sp" android:clickable="true"/>
                        <TextView android:id="@+id/tvDay7" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@drawable/bg_day_selector" android:gravity="center" android:text="T7" android:textSize="12sp" android:clickable="true"/>
                        <TextView android:id="@+id/tvDay8" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:background="@drawable/bg_day_selector" android:gravity="center" android:text="CN" android:textSize="12sp" android:clickable="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giờ bắt đầu"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvStartTime"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_input_field"
                                android:gravity="center_vertical"
                                android:paddingStart="12dp"
                                android:text="08 : 00 AM"
                                android:textColor="#000"
                                android:drawableEnd="@drawable/ic_clock"
                                android:paddingEnd="12dp"
                                android:drawableTint="#757575"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giờ kết thúc"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/tvEndTime"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_input_field"
                                android:gravity="center_vertical"
                                android:paddingStart="12dp"
                                android:text="08 : 00 AM"
                                android:textColor="#000"
                                android:drawableEnd="@drawable/ic_clock"
                                android:paddingEnd="12dp"
                                android:drawableTint="#757575"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa điểm / Phòng"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"/>
                    <EditText
                        android:id="@+id/etRoom"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="CS Thu Duc / 2A27"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THIẾT LẬP QUY CHẾ"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng số buổi *"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <ImageView
                            android:id="@+id/btnMinusSession"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_gray"
                            android:padding="8dp"
                            android:src="@drawable/ic_minus"
                            app:tint="#555"/>

                        <TextView
                            android:id="@+id/tvTotalSessions"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="11"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <ImageView
                            android:id="@+id/btnPlusSession"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_gray"
                            android:padding="8dp"
                            android:src="@drawable/ic_plus"
                            app:tint="#555"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Số buổi vắng tối đa *"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <ImageView
                            android:id="@+id/btnMinusAbsent"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_gray"
                            android:padding="8dp"
                            android:src="@drawable/ic_minus"
                            app:tint="#555"/>

                        <TextView
                            android:id="@+id/tvMaxAbsence"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <ImageView
                            android:id="@+id/btnPlusAbsent"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_gray"
                            android:padding="8dp"
                            android:src="@drawable/ic_plus"
                            app:tint="#555"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sinh viên vắng quá số buổi này sẽ nhận cảnh báo Đỏ và có nguy cơ bị cấm thi."
                        android:textSize="10sp"
                        android:textColor="#757575"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN BỔ SUNG"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Học kỳ"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvSemester"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_field"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="Học kỳ 2, năm học 2025 - 2026"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:paddingEnd="12dp"
                        android:drawableTint="#757575"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả lớp học"
                        android:layout_marginTop="16dp"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Link nhóm Zalo, tóm tắt đề cương, ..."
                        android:padding="12dp"
                        android:gravity="top|start"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_button_red"
        android:text="Tạo lớp học"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>